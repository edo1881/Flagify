<!DOCTYPE html>
<html lang="en">

<head>
    <%= stylesheet_link_tag "profile" %>
    <title>Profilo</title>
</head>

<body>
    
        <div class=" container mt-5 py-5 info_profilo" style="width: 100%;">
            <div class="row">
                <div class="justify-content-center col mt-3">
                    <title style="display: block;font-size: xx-large;">Info profilo</title>
                    <table class="table user-info table-dark table-striped table-bordered border-white">
                        <tbody class="scoreboard_table"></tbody>
                        <tr><td>Username</td><td><%= current_user.full_name %></td></li>
                        <tr><td>Email</td><td><%= current_user.email %></td></li>
                    </table>
                </div>
                <div class="col"></div>
                <div class="col text-center">
                        <% if !current_user.avatar_url%> <div><img src="https://www.sony.it/presscentre/assets/resized/2021/05/contact-dummy_landscape_964x656.jpg"  class="rounded  figure-img" width="150" height="150" alt="your photo"></div>
                        <% else%><div> <img src="<%=current_user.avatar_url %>" class="rounded  figure-img" width="150" height="150" alt="your photo"></div>
                        <% end %>
                    <figcaption class="text-center">  
                        <div><strong ><h5> Role: <%= current_user.role%></h5></strong></div>
                        <% if current_user.role=="player"%>
                        <a href=<%= new_challenge_url %>><button  style="border-radius: 30px;background: lightpink;">Diventa un creator</button></a>
                        <% end %>
                    </figcaption>
                </div>
            </div>
        </div>
        <div class="m-5">
            <div class="container">
                <div class="justify-content-center">
                    <title style="display: block;font-size: xx-large;">Challenge completate</title>
                    <table class="table table_challenge_flag table-dark table-striped table-bordered border-white">
                        <thead>
                            <tr>
                              <th class="text-center px-0" scope="col">Timestamp</th>
                              <th class="text-center" scope="col">Challenges</th>
                              <th class="text-center" scope="col">Score</th>
                            </tr>
                        </thead>
                        <tbody class="scoreboard_table"></tbody>
                        <% @user.each do |t|%>
                        <tr>
                              <th class="text-center px-0" scope="col"><%= t.id%></th>
                              <th class="text-center" scope="col">Challenges</th>
                              <th class="text-center" scope="col">Score</th>
                        </tr>
                        <%end%>
                        
                    </table>
                </div>
            </div>
        </div>
        <div class="m-5 py-5">
            <div class="container">
                <div class="justify-content-center">
                    <title style="display: block;font-size: xx-large;">Hint richiesti</title>
                    <table class="table table_challenge_hint table-dark table-striped table-bordered border-white">
                        <thead>
                            <tr>
                              <th class="text-center px-0" scope="col">Timestamp</th>
                              <th class="text-center" scope="col">Challenges</th>
                              <th class="text-center" scope="col">Points lost</th>
                            </tr>
                        </thead>
                        <tbody class="scoreboard_table"></tbody>
                    </table>
                </div>
            </div>
        </div>
        
</body>
<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" %>

<script>
    window.addEventListener('load', (event) => {
        getNameBtn();
        getStatisctics();
        centra_nav();
    });
    window.addEventListener('resize', (event) => {
            centra_nav();
        });
    function centra_nav(){
        $('.navbar-brand').css('margin-right', ($('#btn_form').outerWidth() - $('.navbar-brand').outerWidth()).toString()+'px') ;
    }
</script>

</html>