<!DOCTYPE HTML>
<html>
    <head>
    <%= stylesheet_link_tag "login","create_chall" %>
    </head>
    <body>
        <h1 class="display-4 font-monospace fw-bold  mt-5 text-center" >Create Challenge</h1>
        <div class="row">
            <div class="col-md-6 login-dark">
                <%= form_with(model: @chall, class:"form",url:"/",method: :post) do |f|%>
                <div class="field"><%= f.text_field :title,class: "form-control", placeholder: "Title" %><br/></div>
                <div class="field"><%= f.text_field :cat  ,class:"form-control", placeholder: "Category" %><br/></div>
                <div class="field"><%= f.text_area :desc  , placeholder: "Description",rows:"4",cols:"24" %><br/></div>
                <div class="field"><%= f.text_field :flag ,class:"form-control", placeholder: "Flag" %><br/></div>
                <%end%>
            </div>
            <div class="mt-5 col-md-5">
	            <%= form_with(method: :post,url:new_challenge_path) do |f1| %> 
                    <div class="form-group files">
                        <label>Upload Your File </label>
                        <%= f1.file_field :upfile,class:"form-control",multiple:"" %>
                    </div>
                <%end%> 
            </div>      
        </div>

    </body>

</html>